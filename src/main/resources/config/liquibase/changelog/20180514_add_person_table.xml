<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <changeSet id="20180514.create.table.person" author="enhui.chen">
        <createTable tableName="person">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" remarks="主键ID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="varchar(100)" remarks="名字">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="int" remarks="年龄">
                <constraints nullable="false"/>
            </column>
            <column name="sex" type="varchar(10)" remarks="性别">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>
